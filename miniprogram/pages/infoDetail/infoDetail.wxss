#infoList{
  height: 60px;
  width: 320px;
  margin: 10px auto;
  border: 1px solid #7c7f97;
  border-radius: 10px;
  background: #7c7f97;
  color: white;
  position: relative;
}
#infoList image{
  width: 50px;
  height: 50px;
  position: absolute;
  top: 50%;
  left: 10px;
  transform: translate(0,-50%);
}
#infoList #name{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
}
#infoList #date{
  position: absolute;
  font-size: 12px;
  right: 5px;
}