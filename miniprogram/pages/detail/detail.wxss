body{
  background: #eee;
}
#title{
  margin: 0 auto;
  font-size: 20px;
  color: #4c5260;
}
#date{
  margin: 0 auto;
  font-size: 12px;
  color: #999;
  margin-top: 5px;
  margin-bottom: 5px;
}
#content{
  width: 80%;
  margin: 0 auto;
  color: #4c5260;
}
#content text{
  display: inline-block;
  /* text-indent: 2em; */
}
#contentImg{
  width: 80%;
  margin: 5px auto;
